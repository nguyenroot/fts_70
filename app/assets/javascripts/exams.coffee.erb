countdown = ->
  $('#clock').countdown
    until: $('#remaining_time').val()
    format: 'HMS'
    onExpiry: ->
      $('#finish_button').removeAttr('data-confirm')
      $('#finish_button').click()
      alert '<%= I18n.t "exams.timeout" %>'
      return
  return

document.addEventListener 'turbolinks:load', countdown
$(document).on 'page:update', countdown
